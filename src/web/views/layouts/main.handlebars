<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/src/favicon.ico">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@algolia/autocomplete-theme-classic@1.19.4/dist/theme.min.css">
    <style>
      .cursor-pointer {
        cursor: pointer;
      }
      .aa-Panel {
        z-index: 1000;
      }
      .min-vh-dynamic-100 {
        height: 100dvh !important;
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-dynamic-100">
    <nav class="navbar navbar-expand navbar-dark bg-secondary">
      <div class="container-fluid">
        <button class="navbar-toggler d-lg-none d-inline" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasResponsive" aria-controls="offcanvasNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand mx-2" href="/">ðŸª®Comb</a>
        <div id="autocomplete" class="overflow-hidden w-100"></div>
        <ul class="navbar-nav">
        </ul>
      </div>
    </nav>
    <div class="container-fluid mt-2 d-flex flex-column flex-grow-1">
      {{{body}}}
    </div>
    <!-- modal for render content -->
    <div class="modal fade" id="universalModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="tickerSymbol"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body"></div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/lightweight-charts@5.1.0/dist/lightweight-charts.standalone.production.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/navigo@8.11.1/lib/navigo.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@algolia/autocomplete-js@1.19.4/dist/umd/index.production.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@algolia/autocomplete-plugin-recent-searches@1.19.4/dist/umd/index.production.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/algoliasearch@5.45.0/dist/lite/builds/browser.umd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.8/dist/handlebars.min.js"></script>
    <script src="/src/chart.js"></script>
    <script src="/src/coins-list.js"></script>
    <script src="/src/orders.js"></script>
    <script src="/src/positions.js"></script>
    <script src="/src/history-positions.js"></script>
    <script src="/src/win-rate.js"></script>
  </body>
</html>
