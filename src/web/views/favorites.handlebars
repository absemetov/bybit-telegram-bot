<h3>Tickers</h3>
<ul class="list-group">
  {{#each paginate.tickers as |ticker|}}
    {{> ticker ticker=ticker}}
  {{/each}}
</ul>
<nav aria-label="Page navigation example">
  <ul class="pagination mt-4">
    {{#if paginate.hasPrev}}
      <li class="page-item">
        <a href="/tickers?direction=prev&lastVisibleId={{paginate.firstVisibleId}}" class="page-link">⏪ Prev Page</a>
      </li>
    {{/if}}
    {{#if paginate.hasNext}}
      <li class="page-item">
        <a href="/tickers?direction=next&lastVisibleId={{paginate.lastVisibleId}}" class="page-link">Next Page ⏩</a>
      </li>
    {{/if}}
  </ul>
</nav>
